<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:outlineSpotShadowColor="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:weightSum="100"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_youtube"
            android:layout_weight="25"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="0dp"
                android:text="Video Title"
                android:textSize="@dimen/_12sdp"

                android:inputType="textMultiLine"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/item_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="0dp"
                android:text="Url:"
                android:textSize="@dimen/_12sdp"
                android:inputType="textMultiLine"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:visibility="gone"
                    android:id="@+id/item_downloaded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingLeft="0dp"
                    android:text="35.0 MB / "/>
                <TextView
                    android:id="@+id/item_downloadsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingLeft="0dp"
                    android:text="35.0 MB"/>
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="right"
                    android:foregroundGravity="right"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/img_facebook"/>
            </LinearLayout>


        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right|top"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/closebtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_crossupdate"
            android:layout_gravity="right|top"
            android:foregroundGravity="right|top"
            />
        <ImageView
            android:id="@+id/favbtn"
            android:layout_weight="35"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_favorite_black_24dp"
            android:backgroundTint="@color/red"
            android:padding="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"/>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
